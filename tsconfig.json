{
  "compilerOptions": {
    "strict": true,
    "outDir": "build",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "removeComments": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "baseUrl": "src",
    "paths": {
      "geometry": [
        "geometry/index.ts"
      ],
      "utils": [
        "utils/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}